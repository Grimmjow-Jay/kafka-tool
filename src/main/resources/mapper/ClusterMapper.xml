<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.grimmjow.kafkatool.mapper.ClusterMapper">

    <insert id="save">
        INSERT INTO cluster (cluster_name, bootstrap_servers)
        VALUES (#{cluster.clusterName}, #{cluster.bootstrapServers});
    </insert>

    <delete id="remove">
        DELETE
        FROM cluster
        WHERE cluster_name = #{clusterName}
    </delete>

    <select id="list" resultType="com.grimmjow.kafkatool.domain.Cluster">
        SELECT id,
               cluster_name,
               bootstrap_servers
        FROM cluster
    </select>

    <select id="getByName" resultType="com.grimmjow.kafkatool.domain.Cluster">
        SELECT id,
               cluster_name,
               bootstrap_servers
        FROM cluster
        WHERE cluster_name = #{clusterName}
    </select>

</mapper>